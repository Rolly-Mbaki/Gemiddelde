<%- include('partials/header')  %> 

<div id="main">
    <h1>De som van alle getallen is:</h1>
    <h1 id="som"><%- som %> </h1>
    <h2>aantal getallen: <%- data.length %></h2> 
    <form action="/addGetal" method="POST">
        <label class="label">Getal:</label> <br><input class="invullen" type="text" name="getal" autocomplete="off" required>
        <br>
        <label class="label">Naam:</label> <br><input class="invullen" type="text" name="naam" autocomplete="off">
        <br>
        <input type="submit" value="+" class="button">
    </form>
</div>

<div id="logs">
    <h1>Logs</h1>
    <div id="table-scroll">
        <table>
            <tbody>
                <th>Toegevoegd door</th>
                <th>Getal</th>
                <th>Datum</th>
                <% for (let log of data){ %> 
                <tr>
                    <td><%- log.naam %> </td>
                     <td><%- log.getal %> </td>
                     <td><%- log.datum %> </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('partials/footer')  %> 